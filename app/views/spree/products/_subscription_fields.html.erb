<% if @product.subscribable? %>
  <div class="subscription_options" style="display: none;">
    <hr>
    <br>
    <% subscription = Spree::Subscription.new %>
    <span>
      <%= label_tag :subscription, Spree.t(:recurring_delivery_interval) %><span class="required">*</span>
      <%= collection_select :subscription, :subscription_frequency_id, @product.subscription_frequencies, :id, :title, {}, { class: "form-control" } %>
    </span>
    <br>
    <span>
      <%= label_tag :subscription, Spree.t(:total_deliveries) %><span class="required">*</span>
      <br>
      <%= number_field :subscription, :delivery_number, class: "form-control", min: 1, value: 1 %>
    </span>
  </div>
  <br>
<% end %>
