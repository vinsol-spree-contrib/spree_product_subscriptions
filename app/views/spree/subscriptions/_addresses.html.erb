<div class="row">
  <div data-hook="bill_address_wrapper" class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title shopping-title"><%= Spree.t(:billing_address) %></h3>
      </div>

      <div class="panel-body">
        <% if @subscription.not_changeable? %>
          <%= render partial: 'spree/admin/shared/address', locals: { address: @subscription.bill_address } %>
        <% else %>
          <%= f.fields_for :bill_address do |ba_form| %>
            <%= render partial: 'spree/address/form', locals: { form: ba_form, address_type: 'billing', address: @subscription.bill_address } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6" data-hook="ship_address_wrapper">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title shopping-title"><%= Spree.t(:shipping_address) %></h3>
      </div>
      <div class="panel-body">
        <% if @subscription.not_changeable? %>
          <%= render partial: 'spree/admin/shared/address', locals: { address: @subscription.ship_address } %>
        <% else %>
          <%= f.fields_for :ship_address do |sa_form| %>
            <%= render partial: 'spree/address/form', locals: { form: sa_form, address_type: 'shipping', address: @subscription.ship_address } %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
