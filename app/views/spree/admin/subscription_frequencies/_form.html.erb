<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_subscription_frequencies_list), spree.admin_subscription_frequencies_path, class: 'btn-success', icon: 'chevron-left' %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @subscription_frequency } %>

<%= f.field_container :title, class: ['form-group'] do %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.error_message_on :title %>
<% end %>
<%= f.field_container :unit, class: ['form-group'] do %>
  <%= f.label :unit %>
  <%= f.select :unit, @subscription_frequency.class.units.keys.map { |u| [u.humanize, u]}, {}, {class: 'select2'} %>
  <%= f.error_message_on :unit %>
<% end %>
<%= f.field_container :units_count, class: ['form-group'] do %>
  <%= f.label :units_count %>
  <%= number_field :subscription_frequency, :units_count, min: 1, value: @subscription_frequency.units_count || 1, class: 'form-control' %>
  <%= f.error_message_on :units_count %>
<% end %>
